<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingVertical="50dp">

    <CheckBox
        android:id="@+id/cb_Pho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phở Hà Nội"></CheckBox>

    <CheckBox
        android:id="@+id/cb_Bun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bún Bò Huế"></CheckBox>

    <CheckBox
        android:id="@+id/cb_MiQuang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mì Quảng"></CheckBox>

    <CheckBox
        android:id="@+id/cb_HuTieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủ Tiếu Sài Gòn"></CheckBox>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OK"></Button>

        <Button
            android:id="@+id/btn_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="BACK"></Button>
    </LinearLayout>

</LinearLayout>